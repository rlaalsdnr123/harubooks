@keyframes slideUp {
    0% {
      transform: translateY(100%);
    }
    100% {
      transform: translateY(0);
    }
  }

  @keyframes slideDown {
    0% {
      transform: translateY(0);
     }
    100% {
      transform: translateY(100%);
    }
  }
  
  #sound-check{
  	display: flex;
  	text-align: center;
  	align-content: center;
  	justify-content: center;
  }
  
  .img-size{
  	width: 35px;
  	height: 35px;
  	cursor: pointer;
  	margin-right: 5px;
  }
  
  #voice-span-div{    
    position: fixed;
    z-index: 15;
    top: 0;
    margin-left: 450px;
    background-color: #9adf9a;
  }
  
  #voice-choice{
	display: none;
    font-family: 'Nanum Gothic', sans-serif;
    color: rgb(255 255 255);
    font-size: 18px;
    font-weight: bold;
    padding: 20px;		
  }
   
  #voice-close{
  	display: none;
  	background-color: #b1442e;
  }
  
  #voice-stop{
  	display: none;
  }
  
  #sound-anis{
  	height: 5px;
  	display: flex;
  	align-items: center; 
  	margin-top: 15px;
  }
  
  #trans-k{
  	display: none;
  }
  
  .sound-ani{
  	display: block;
  	position: relative;
  	background: #b5f88f;
  	height: 100%;
  	width: 10px;
  	border-radius: 50px;
  	margin: 0.5px;
	  	animation : animate 1.2s linear infinite; 
  }
  
  @keyframes animate{
  	50%{
  		height : 20%;
  	}
  	100%{
  		height: 100%;
  	}
  }
  
  .sound-ani:nth-child(1){
  		animation-delay: 0s;
  }
  .sound-ani:nth-child(2){
  		animation-delay: 0.3s;
  }
  .sound-ani:nth-child(3){
  		animation-delay: 0.6s;
  }
  .sound-ani:nth-child(4){
  		animation-delay: 0.9s;
  }
  .sound-ani:nth-child(5){
  		animation-delay: 0.6s;
  }
  .sound-ani:nth-child(6){
  		animation-delay: 0.3s;
  }
  .sound-ani:nth-child(7){
  		animation-delay: 0s;
  }
  
