@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Nanum+Pen+Script&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Jua&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap');
*{
    margin: 0;
    padding: 0;
    
    font-family: 'Poppins', 'ans-serif's;
    box-sizing: border-box;
    list-style: none;
    text-decoration: none;
}
body{
    background:#f8f8f8;
}
#title-1{
    font-family: 'Nanum Pen Script', cursive;
    font-size: 1.2em;
    text-align: center;
}
#title-2{
    font-family: 'Nanum Gothic', sans-serif;
    font-size: 2.2em;
    text-align: center;
}
:root{
   --gradient: linear-gradient(to right, #a7ed8d, #a1c793);
}
.sidebar{
    position: fixed;
    width: 300px;
    height: 100vh;
    background: #f8f8f8;
    padding: 20px;
    z-index: 2;
}
.main-home{
    position: absolute;
    width: calc(100% - 300px);
    top: 0;
    left: 300px;
    min-height: 100vh;
    background:#fff;
    border-radius: 1rem 0 0 1rem;
    z-index: 1000;
}
.logo img{
    width: 80px;
}
#logo-box{
    border-bottom: 1px solid green;
}
.profile{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 1.4rem;
}
.profile-img{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 2px solid #4dac27;
}
.profile-img img{
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 50%;
    object-position: center;
}
.name{
    display: flex;
    align-items: center;
    margin: 1rem 0 0.4rem;
}
.name h1{
    font-size: 1.1rem;
}
.name img{
    margin-left: 4px;
    width: 20px;
    object-fit: contain;
}
.profile-img span{
    font-size: 0.9rem;
    font-weight: 400;
}
.about{
    display: flex;
    justify-content: space-between;
    margin-top: 1rem;
}
.box{
    text-align: center;
}
.box h3{
    font-size: 1rem;
    font-weight: 500;
}
.box span{
    font-size: 0.9rem;
    font-weight: 400;
}
.menu a{
    width: 100%;
    font-size: 1rem;
    color: black;
    display: flex;
    align-items: center;
    line-height: 40px;
}
.menu a:hover,.menu .active{
    color: #4dac27;
}
.menu .icon{
    margin-right: 1rem;
    font-size: 20px;
}
.menu a:hover::before,
.menu .active::before{
    content: '';
    position: absolute;
    right: 0;
    width: 2px;
    height: 17px;
    background: #4dac27;
}
/* 메인 컨텐츠 */
.main-home{
    padding: 20px;
    overflow: hidden;
}
.header{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.search{
    display: flex;
    align-items: center;
    background: #f8f8f8;
    width: 200px;
    height: 2.4rem;
    padding: 10px;
    border-radius: 10px;
}
.search input{
    border: none;
    outline: none;
    background: transparent;
    margin-left: 7px;
}
.search o{
    font-size: 20px;
}
.header-content{
    display: flex;
    align-items: center;
}
.header-content i{
    color: black;
    font-size: 20px;
    margin-left: 1rem;
}
.header-content .btn{
    display: flex;
    align-items: center;
    padding: 10px;
    border-radius: 8px;
    background: #53b12e;
    margin-left: 1rem;
}
.header-content .btn i{
    color: hsla(0, 0%, 100%, 0.6);
    margin-right: 10px;
}
.btn-text{
    color: white;
}
.stories-title{
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
    font-family: 'Nanum Gothic', sans-serif;
}
.stories-title h1{
    font-size: 1.8rem;
    font-family: 'Nanum Gothic', sans-serif;
}
.stories-title .btn{
    display: flex;
    align-items: center;
    color: black;
}
.stories-title .btn i{
    font-size: 24px;
    margin-top: 10px;
}
.stories{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 2rem;
}


.feed{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 1rem;
    margin-bottom: 1rem;
}
.feed h1{
    font-size: 1.7rem;
    font-family: 'Nanum Gothic', sans-serif;
    color: #9f9d9d;
}
.feed-text{
    display: flex;
    align-items: center;
}
.feed-text h2{
    font-size: 1rem;
    margin-right: 1rem;
}
.main-posts{
    display: grid;
    grid-template-columns: repeat(auto-fit,minmax(300px, auto));
    gap: 11px;
}
.post-box{
    width: 300px;
}
.post-box img{
    width: 100%;
    height: 344px;
    object-fit: cover;
    border-radius: 0.5rem;
    cursor: pointer;
}
.post-info{
    display: flex;
    align-items: center;
    align-items: center;
    justify-content: space-between;
}
.post-img{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    border: 2px solid #4dac27;
    border-radius: 50%;
}
.post-img img{
    width: 27px;
    height: 27px;
    object-fit: cover;
    border-radius: 50%;
    object-position: center;
}
.post-profile{
    display: flex;
    align-items: center;
}
.post-profile h3{
    font-size: 12px;
    font-weight: 600px;
    margin-left: 5px;
}
.likes{
    display: flex;
    align-items: center;

}
.likes i{
    font-size: 20px;
    margin-left: 10px;
}
.likes span{
    font-size: 14px;
    margin-left: 7px;
}
#go-back1, #go-back2{
    background-color: white;
    border: 1px solid #ffc0cb;
}
#go-back1 div, #go-back2 div{
    color: black  
} 
#go-back1:hover, #go-back2:hover{
    background-color: #ffc0cb;
    color: white;
}
.stories{
    height: 200px;
}
#story-info{
    text-align: center;
    margin-left: 130px;
}
.stories{
    background-color: #f8f8f8;
}
#si-img{
    width: 300px;
    height: 170px;
    margin-right: 200px;
}
#si1{
    font-size: 1.6em;
    font-family: 'Nanum Pen Script', cursive;
}
#si2{
    font-size: 3.0em;
    font-family: 'Nanum Gothic', sans-serif;
}
