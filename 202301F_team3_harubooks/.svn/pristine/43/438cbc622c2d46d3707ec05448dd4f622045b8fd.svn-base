   @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Nanum+Pen+Script&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Jua&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap');
   *{
      margin: 0;
      padding: 0;
      font-family: 'Poppins', 'ans-serif's;
      box-sizing: border-box;
      list-style: none;
      text-decoration: none;
   }
   
   body{
       background:#f8f8f8;
   }
   
   #myhru-main-div{
   	width: 1440px;
   	margin: 0px auto;
   }
   
   #header{
      width: 100%;
      display: flex;
      align-items: center;
      padding: 8px 90px 0px 130px;
   }

   #logo-box{
      flex: 10%;
   }  
   
   .logo img{
	  width: 100%;
	  height: 100%;
   }
   
   #allTitle{
	  flex: 45%;
      margin-left: 40px;
      padding-top: 14px;
   }
   
   #title-1{
       font-family: 'Nanum Pen Script', cursive;
       font-size: 2.2em;
       text-align: center;
   }
   
   #title-2{
	    font-family: 'Nanum Gothic', sans-serif;
	    font-size: 2.7em;
	    text-align: center;
	    margin-left: 5px;
	    font-weight: bold;
   }   
   #btns{
	    flex: 45%;
	    display: flex;
	    float: right;
	    margin-left: 10%;
	    padding-top: 20px;  
   }
   
   .btn{
       align-items: center;
       padding: 10px;
       border-radius: 8px;
       background: #53b12e;
       margin-left: 1rem;
       width: 35%;
   }
   
   .btn-text{
      font-weight: bold;
       color: white;
       text-align: center;
   }
   
   #main{
      display : flex;
      width: 100%;
      padding: 15px 80px 0px 80px;
   }
   
   #sidebar{
	 float: left;
     background-color: white;
     flex: 20;
     height: 430px;
     border-radius: 50px;
     border: 1px solid #80808021;
   }
   
   #home{
     margin-left: 8px;
     height: 765px;
     background-color: white;
     border-radius: 30px;
     border: 1px solid #80808021;
     padding: 25px 10px 35px 10px;
     margin-bottom: 50px;
     flex: 74;
   }
   
   #bookmark{
      flex: 8;
   }
   
   #marks{
     padding-top: 40px;
     font-size: 1.0em;
   }
   
   .mark{
      width: 100%;
      height: 40px;
      margin-bottom: 40px;
      padding: 10px 30px 10px 5px;
      color: white;
      background: #53b12e;
      font-family: 'Nanum Gothic', sans-serif;
      font-size: 1.0em;
      font-weight: bold;
      position: relative;
      transition: width 0.3s ease;
   }
   
   .mark::before {
       content: "";
       position: absolute;
       top: 50%;
       right: 0px;
       transform: translateY(-50%);
       width: 0;
       height: 0;
       border-top: 20px solid transparent; 
       border-bottom: 20px solid transparent;
       border-right: 20px solid #f8f8f8;
       transition: width 0.3s ease; /* 부드러운 효과를 위한 transition 추가 */
   }
   
	.mark:hover {
	  width: 120%; /* 마우스를 올리면 가로 길이를 늘립니다 */
	}
	
	.mark:hover::before {
	  width: 50px; /* 마우스를 올리면 화살표의 가로 길이를 늘립니다 */
	}
   
   #mark-red {
      background-color: #b1442e;
   }
   
   #mark-blue {
      background-color: #2e5cb1;
   }
   
   #mark-yellow{
      background-color: #b1af2e;
   }
   
   .profile{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 1.7rem;
   }
   
	.profile-img {
	    display: flex;
	    align-items: center;
	    justify-content: center;
	    width: 69%;
	    height: 170px;
	    border-radius: 50%;
	    border: 2px solid #4dac27;
	}
   
   .profile-img img{
       width: 85%;
       height: 140px;
       object-fit: cover;
       border-radius: 50%;
       object-position: center;
   }
   
   .name{
       display: flex;
       align-items: center;
       margin: 1.4rem 0 0.4rem;
   }
   .name h1{
       font-size: 1.1rem;
   }
   
   .name img{
       margin-left: 4px;
       width: 20px;
       object-fit: contain;
   }
   
   .profile-img span{
       font-size: 0.9rem;
       font-weight: 400;
   }
   
   #side-btns{
      margin-top: 22px;
   }
   
   .side-btn{
      margin-top: 5px;
      align-items: center;
      padding: 10px 45px 10px 45px;
      border-radius: 5px;
      background: #53b12e;
      width: 100%;
      font-weight: bold;
      color: white;
      text-align: center;
   }
   
   #member-nick{
   	 color: #5055b1;
   }
   
   .mark-text-p{
   	 margin-top: 3px;
     font-size: 0.9em;
   }
}
   