<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<link rel="stylesheet" href="/resources/asset/css/myDiary.css">
<meta charset="UTF-8">
<style>
.bt_wrap {
	margin-top: 11px;
    justify-content: center;
}
.board_write .title p{
	margin-left: 0px;
	margin-bottom: 10px;
}
.board_write .title {
	display:flex;
	border-bottom: 1px solid #999;
	justify-content: space-between;
}
.board_title #titleP{
	margin-left: 30%;
	font-size: 2.4rem;
}

.board_title #ymdP{
	margin-right: 7%;
	margin-top: 2%;
}
.board_wrap {
	margin-top: 12%;
}
div #insertBtn{
	display: inline-block;
    min-width: 7%;
    margin-left: 10px;
    padding: 10px;
    border: 1px solid #000;
    border-radius: 2px;
    font-size: 17px;
}
</style>
    
<input type="hidden" value="<sec:authentication property="name"/>" id="secName">
<div class="board_wrap">
   <div class="board_write_wrap">
   	 <form action="/myHaru/mydiary?${_csrf.parameterName }=${_csrf.token}" method="post" id="diaryForm">
       <div class="board_write">
           <div class="title">
               <input type="text" placeholder="제목을 입력해주세요..." name="dTitle" id="dTitle">
           </div>
           <div class="cont">
               <textarea placeholder="내용을 입력해주세요..." id="dContent" name="dContent" ></textarea>
           </div>
       </div>
     </form>
       <div class="bt_wrap">
           <button id="insertBtn" class="on">등록</button>
           <a href="/myHaru/mydiary">취소</a>
       </div>
   </div>
</div>
<script type="text/javascript">
$(function (){
	var insertBtn = $("#insertBtn");
	var diaryForm = $("#diaryForm");

	insertBtn.on("click", function () {
		var title = $("#dTitle").val();
		var content = $("#dContent").val();

        if(title == null || title == ""){
            alert("제목을 입력해주세요")
            return false;
        }
        if(content == null || content == ""){
            alert("내용을 입력해주세요")
            return false;
        }
        diaryForm.submit();
	})
})
</script>
