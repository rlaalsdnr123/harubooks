@charset "UTF-8";
   @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Nanum+Pen+Script&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Jua&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap');
   
   #ebookLists{
      margin: 0px 50px 0px 85px;
      display: grid;
      grid-template-columns: repeat(auto-fit,minmax(500px, auto));
   }
   
   .ebookList{
      display: flex;
      margin-top:30px;
      width: 500px;
      height: 300px;
      border : 0.2px solid #bdbdbd88;
      border-radius: 0.5rem;
   }
   
   #ebook-select{
      display: flex;
      width: 100%;
      padding: 5px 50px 0px 50px;
      font-weight: bold;
      align-items: center;
   }
   
   #ebook-my{
      flex:20;
      font-family: 'Nanum Gothic', sans-serif;
      font-size: 1.5em;
      color: #53b12e;
   }
   
   #ebook-input{
      flex:70;
      text-align: center;
      font-family: 'Nanum Gothic', sans-serif;
   }
   
   #ebook-input input[type='text']{
   	  font-size: 0.9em;
      text-align: center;
      width: 70%;
      padding: 8px;
      border-radius: 0.5rem;
      border: 2px solid #53b12e;
      font-weight: bold;
   }
   
   #ebook-input button[type='button']{
      font-family: 'Nanum Gothic', sans-serif;
      padding: 13px;
   	  color: white;
   	  border: none;
   	  background-color: #53b12e;
   	  font-weight: bold;
   	  cursor: pointer;
   	  border-radius: 0.5rem;
   }
   
   #ebook-options{
      flex:10;
      text-align: right;
   }
   
   #ebook_option{
   	  font-family: 'Nanum Gothic', sans-serif;
   	  border-radius: 0.5rem;
      border: 2px solid #53b12e;	
      padding: 2px;
   }
   
   
   #ebook-image{
      flex : 40;
      text-align: center;
   }

   #ebook-image img{
       margin-top:23%;
       width: 70%;
       height: 200px; 
       object-fit: cover;
   }
   
   
   #ebook-info{
      flex : 40;
      text-align: center;
      margin-top: 8%
   }
   
	#ebook_title{
   	  font-family: 'Nanum Gothic', sans-serif;
   	  font-size: 1.3em;
   	  font-weight: bold;
   	  color: #53b12e;		
	}
	
	#ebook-gauge-div{
		width: 100%;
		height: 10px;
		border: 1px solid rgb(177, 175, 175);	
		margin: 10px 0px 5px 0px;
		padding: 10px;
		position: relative;
	}
	
	#ebook-gauge{
		width: 0%;
		height: 100%;
		background-color: #53b12e;
		position: absolute;
		top: 0px;
		left: 0px;
	}
	
	#ebook-gauge-p{
		font-family: 'Nanum Gothic', sans-serif;
		font-weight: bold;
		font-size: 1.1em;
		
	}
	
	#ebook-date{
		padding-top: 15px;
		color: gray;
		font-size: 0.8em;
	}
	
	.date-info{
		width: 500px;
	}
	
	.ebook-see{
		margin-top : 30px;
		font-family: 'Nanum Gothic', sans-serif;
		font-weight: bold;
		font-size: 1.4em;
		padding: 10px 40px 10px 40px;
		background-color: #53b12e;
		color:  white;
		border: none; 
		border-radius: 0.8rem;
		cursor: pointer;
	}
	
	.ebook-see:hover{
		box-shadow: 0px 0px 4px 4px #53b12e5d;
	}
	
   #ebook-url{
       flex: 20;
       text-align: center;
       margin-top: 11%;
       padding: 20px;
   }
   
   #url{
      background-color: pink;
      padding: 20px;
   }
   
   #pagingArea{
   		margin-top: 40px;
   		text-align: center;
   }
   
   #pagingBtns{
   		display: flex;
 		align-items: center;
   		padding: 0px 30% 0px 30%;
 		justify-content: center;
   }

	.page-item{
 		margin-right: 30px; 
	}	
	
	.page-link{
		font-family: 'Nanum Gothic', sans-serif;
		font-weight: bold;
		font-size: 1.2em;
		color: #53b12e;
	}
	
	.page-add-link{
		font-size: 1.4em;
	}
   