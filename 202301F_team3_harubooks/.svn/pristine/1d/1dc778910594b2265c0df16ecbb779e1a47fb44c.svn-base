*{
    margin: 0;
    padding: 0;
    
    font-family: 'Poppins', 'ans-serif's;
    box-sizing: border-box;
    list-style: none;
    text-decoration: none;
}
.chatting{
    display: flex;
    align-items: center;
    justify-content: space-between;
	margin: 1rem 1rem;
}

#chatting-tex h1{
    font-size: 1.7rem;
    font-family: 'Nanum Gothic', sans-serif;
    color: #9f9d9d;
}

#chatting-search-select{
	text-align: center;
    border: 1px solid grey;
    border-radius: 10px;
    font-family: 'Nanum Gothic', sans-serif;
    color: #9f9d9d;
    padding: 3px;
    font-weight: bold;
    outline: none;
}

#chatting-search-input{
    width: 350px;
    text-align: center;
    border: 1px solid grey;
    border-radius: 10px;
    font-family: 'Nanum Gothic', sans-serif;
    color: #9f9d9d;
    padding: 3px;
    font-weight: bold;	
    outline: none;
}

#chatting-search-input-btn{
	width: 65px;
    font-family: 'Nanum Gothic', sans-serif;
    color: #9f9d9d;
    padding: 3px 11px;
    font-weight: bold;
    border-radius: 8px;
    outline: none;
    border: 0.5px solid #9f9d9d;
    cursor: pointer;
}

#chatting-select{
    width: 115px;;
    font-family: 'Nanum Gothic', sans-serif;
    color: #9f9d9d;
    padding: 4px 11px;
    font-weight: bold;
    border-radius: 8px;
    outline: none;
    border: 0.5px solid #9f9d9d;
    cursor: pointer;
    text-align: center;
    font-size: 14px;
}

#chatting-upload-btn {
    display: flex;
    align-items: center;
    padding: 7px;
    border-radius: 8px;
    background: #53b12e;
    cursor: pointer;
    margin-right: 10px;
}

#chatting-upload-btn i{
	color: hsla(0, 0%, 100%, 0.6);
    margin-right: 10px;
}

.btn-text{
	font-family: 'Nanum Gothic', sans-serif;
    color: white;
}

#imodal, #dmodal {
	position: fixed; /* 위치 고정 */
	left: 0px;
	top: 0px;
	width: 100vw; /* 사이즈 고정 */
	height: 100vh;
	background-color: rgb(57 56 56 / 50%);;
	z-index: 100; /* 클 수록 앞으로 나옴 */
	display: none; /* 처음엔 안 보여야 함 */
}


.imcontainer {
    padding: 5px;
    width: 35%;
    height: 70%;
    margin: 135px 70px 110px 530px;
	background-color: white;
	border-radius: 20px;
	position: relative;
	transition: width 0.5s ease;
	padding: 20px;
	text-align: center;
	justify-content: center;
	align-content: center;
}

#chatting-insert-div{
	display: grid;
    text-align: center;
}

.chatting-divs{
