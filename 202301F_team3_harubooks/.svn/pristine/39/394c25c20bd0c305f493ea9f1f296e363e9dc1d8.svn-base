   @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Nanum+Pen+Script&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Jua&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap');
   *{
      margin: 0;
      padding: 0;
      font-family: 'Poppins', 'ans-serif's;
      box-sizing: border-box;
      list-style: none;
      text-decoration: none;
   }
   
   body{
       background:#f8f8f8;
   }
   
   #header{
      width: 100%;
      display: flex;
      align-items: center;
      padding: 8px 90px 0px 130px;
   }

   #logo-box{
      flex: 10%;
   }
   
   
   .logo img{
      width: 110px;
      height: 7vh;
   }
   
   #allTitle{
      flex: 45%;
       margin-left : 20px; 
       padding-top: 40px;   
   }
   
   #title-1{
       font-family: 'Nanum Pen Script', cursive;
       font-size: 2.2em;
       text-align: center;
   }
   
   #title-2{
       font-family: 'Nanum Gothic', sans-serif;
       font-size: 3.2em;
       text-align: center;
   }   
   #btns{
      flex : 45%;
       display: flex;
       float: right;
      margin-left: 30%;   
      padding-top: 40px;   
   }
   
   .btn{
       align-items: center;
       padding: 10px;
       border-radius: 8px;
       background: #53b12e;
       margin-left: 1rem;
       width: 35%;
   }
   
   .btn-text{
      font-weight: bold;
       color: white;
       text-align: center;
   }
   
   #main{
      display : flex;
      width: 100%;
      padding: 15px 80px 0px 80px;
   }
   
   #sidebar{
      float : left;
      background-color: white;
      flex: 15;
      height: 480px; 
      border-radius: 50px;
      border: 1px solid #80808021;
   }
   
   #home{
      margin-left : 30px;
      background-color: white;
      border-radius: 30px;
      border: 1px solid #80808021;
      padding: 30px 40px 40px 40px;
      margin-bottom: 50px;
      flex: 77
   }
   
   #bookmark{
      float : right;
      display : flex;
      flex: 7;
   }
   
   #marks{
      flex: 30;
      padding-top : 40px;
      display: block;
   }
   
   .mark{
      width: 100%;
      height: 40px;
      margin-bottom: 40px;
      padding: 10px 30px 10px 5px;
      color: white;
      background: #53b12e;
       font-family: 'Nanum Gothic', sans-serif;
       font-size: 1.0em;
       font-weight: bold;
      position: relative;
   }
   
   .mark::before {
       content: "";
       position: absolute;
       top: 50%;
       right: 0px;
       transform: translateY(-50%);
       width: 0;
       height: 0;
       border-top: 20px solid transparent; 
       border-bottom: 20px solid transparent;
       border-right: 20px solid #f8f8f8;
   }
   
   #mark-red {
      background-color: red;
   }
   
   #mark-blue {
      background-color: maroon;
   }
   
   #mark-yellow{
      background-color: lime;
   }
   
   .profile{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 2.8rem;
   }
   
	.profile-img {
	    display: flex;
	    align-items: center;
	    justify-content: center;
	    width: 69%;
	    height: 170px;
	    border-radius: 50%;
	    border: 2px solid #4dac27;
	}
   
   .profile-img img{
       width: 85%;
       height: 140px;
       object-fit: cover;
       border-radius: 50%;
       object-position: center;
   }
   
   .name{
       display: flex;
       align-items: center;
       margin: 1.4rem 0 0.4rem;
   }
   .name h1{
       font-size: 1.1rem;
   }
   
   .name img{
       margin-left: 4px;
       width: 20px;
       object-fit: contain;
   }
   
   .profile-img span{
       font-size: 0.9rem;
       font-weight: 400;
   }
   
   #side-btns{
      margin-top: 22px;
   }
   
   .side-btn{
      margin-top: 5px;
      align-items: center;
       padding: 10px 45px 10px 45px;
       border-radius: 5px;
       background: #53b12e;
       width: 100%;
      font-weight: bold;
       color: white;
       text-align: center;
   }
}
   