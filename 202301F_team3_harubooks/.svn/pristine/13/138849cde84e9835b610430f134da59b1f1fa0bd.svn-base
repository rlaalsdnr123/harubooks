@charset "UTF-8";
#container{
    width: 85%;
    display: flex;
    margin: 0 auto;
    margin-top: 10%;
    text-decoration: none;
    
}
#sidebar{
    width: 15%;
    display: flex;
    flex-direction: column;
}
#myInfo{
    width: 100%;
    height: 180px;
    border: 1px solid #5055b1;
    background-color: #5055b1;
    border-radius: 10px;
}
#category{
    width: 100%;
}
.categoryInfo{
    margin-top: 30px;
    display: flex;
    flex-direction: column;
}
.categoryInfo p{
    font-weight: bold;
    font-size: 18px;
}
.categoryInfo a{
    color: black;
    margin-bottom: 10px;
    align-items: center;
}
#info-1 p{
    margin-bottom: 10px;
}
#content{
    width: 85%;
    margin: 0 auto;
    margin-left: 5%;
}
#contentInfo{
    display: flex;
    width: 100%;
    align-items: center;
    justify-items: center;
    border: 1px solid #d5d5d5;
    border-radius: 10px;
    height: 92px;
    margin-top: 30px;
}
.deliveryInfo{
    display: flex;
    flex-direction: column;
    margin-left: 30px;
    border-right: 1px solid #d5d5d5;
}
.deliveryInfo p{
    margin-bottom: 5px;
    
}
.di-1{
    font-size: 16px;
    font-weight: bold;
}
.di-2{
    font-size: 12px;
    font-weight: bold;
    color: #767676;
}
#prodInfo{
    width: 100%;
    margin-top: 30px;
}
#prodInfo span{
    font-size: 13px;
}
.bookInfo p{
    text-align: center;
}
#printCurrentProd{
    width: 100%;
    border: 1px solid #d5d5d5;
    border-radius: 10px;
    
}
#completeDelivery{
    width: 100%;
    border: 1px solid #d5d5d5;
    border-radius: 10px;
}
#modalWrap {
  position: fixed; 
  z-index: 1; 
  padding-top: 100px; 
  left: 0;
  top: 0;
  width: 100%; 
  height: 100%; 
  overflow: auto; 
  background-color: rgba(0,0,0,0.4); 
  display: none;
}
#modalBody {
  width: 40%;
  height: 700px;
  padding: 30px 30px;
  margin: 0 auto;
  border: 1px solid #5055b1;
  background-color: #fff;
  border-radius: 15px;
}
#closeBtn {
  float:right;
  font-weight: bold;
  color: #777;
  font-size:25px;
  cursor: pointer;
}