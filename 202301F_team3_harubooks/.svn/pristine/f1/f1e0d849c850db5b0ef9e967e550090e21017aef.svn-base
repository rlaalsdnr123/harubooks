package kr.or.ddit.controller.ljy.mng;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

@RequestMapping("/mng")
@Controller
public class MngController {
	// 메인
	@GetMapping("")
	public String goMain() {
		return "mng/dashboard";
	}
	// 도서 정보
	@GetMapping("/books")
	public String goBooks() {
		return "mng/books";
	}
	// 카테고리
	@GetMapping("/category")
	public String goCategory() {
		return "mng/category";
	}
	// 카테고리 대분류
	@GetMapping("/category/main")
	public String goCategoryMain() {
		return "mng/categoryMain";
	}
	// 카테고리 중분류
	@GetMapping("/category/mid")
	public String goCategoryMid() {
		return "mng/categoryMid";
	}
	// 회원관리
	@GetMapping("/mbr")
	public String goMbr() {
		return "mng/mbr";
	}
	// 공지사항
	@GetMapping("/notice")
	public String goBoard() {
		return "mng/noticeboard";
	}
	// 공지사항 등록
	@GetMapping("/noticeForm")
	public String goBoardForm() {
		return "mng/noticeboardForm";
	}
	// 문의내역
	@GetMapping("/inquiry")
	public String goInquiry() {
		return "mng/inquiry";
	}
	// 작가와의 만남
	@GetMapping("/meta")
	public String goMeta() {
		return "mng/meta";
	}
	// 주문내역
	@GetMapping("/orders")
	public String goOrders() {
		return "mng/orders";
	}
	// 주문내역 중 환불
//	@GetMapping("/orders/refund")
//	public String goRefund() {
//		return "mng/refund";
//	}
	// 환불내역
	@GetMapping("/refunds")
	public String goRefunds() {
		return "mng/refunds";
	}
	// 재고내역
	@GetMapping("/remains")
	public String goRemains() {
		return "mng/remains";
	}
	// 발주내역
	@GetMapping("/po")
	public String goPo() {
		return "mng/po";
	}
	// 판매관리
	@GetMapping("/sales")
	public String goSales() {
		return "mng/sales";
	}
	
}
