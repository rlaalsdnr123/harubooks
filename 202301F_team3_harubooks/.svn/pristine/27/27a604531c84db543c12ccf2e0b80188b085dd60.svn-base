@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Nanum+Pen+Script&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Jua&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap');
*{
    margin: 0;
    padding: 0;
    
    font-family: 'Poppins', 'ans-serif's;
    box-sizing: border-box;
    list-style: none;
    text-decoration: none;
}

#modal-parse-div{
	background-color: #5b5a5ac2;
}

body{
    background:#f8f8f8;
}
#title-1{
    font-family: 'Nanum Pen Script', cursive;
    font-size: 1.2em;
    text-align: center;
}
#title-2{
    font-family: 'Nanum Gothic', sans-serif;
    font-size: 2.2em;
    text-align: center;
}
:root{
   --gradient: linear-gradient(to right, #a7ed8d, #a1c793);
}
.sidebar{
    position: fixed;
    width: 300px;
    height: 100vh;
    background: #f8f8f8;
    padding: 20px;
    z-index: 2;
}
.main-home{
    position: absolute;
    width: calc(100% - 300px);
    top: 0;
    left: 300px;
    min-height: 100vh;
    background:#fff;
    border-radius: 1rem 0 0 1rem;
    z-index: 1000;
}

#member-img{
	cursor: pointer;
}
.logo img{
    width: 80px;
}
#logo-box{
    border-bottom: 1px solid green;
}
.profile{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 1.4rem;
}
.profile-img{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 2px solid #4dac27;
}
.profile-img img{
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 50%;
    object-position: center;
}
.name{
    display: flex;
    align-items: center;
    margin: 1rem 0 0.4rem;
}
.name h1{
    font-size: 1.1rem;
}
.name img{
    margin-left: 4px;
    width: 20px;
    object-fit: contain;
}
.profile-img span{
    font-size: 0.9rem;
    font-weight: 400;
}
.about{
    display: flex;
    justify-content: space-between;
    margin-top: 1rem;
}
.box{
    text-align: center;
}
.box h3{
    font-size: 1rem;
    font-weight: 500;
}
.box span{
    font-size: 0.9rem;
    font-weight: 400;
}
.menu a{
    width: 100%;
    font-size: 1rem;
    color: black;
    display: flex;
    align-items: center;
    line-height: 40px;
}
.menu a:hover,.menu .active{
    color: #4dac27;
}
.menu .icon{
    margin-right: 1rem;
    font-size: 20px;
}
.menu a:hover::before,
.menu .active::before{
    content: '';
    position: absolute;
    right: 0;
    width: 2px;
    height: 17px;
    background: #4dac27;
}
/* 메인 컨텐츠 */
.main-home{
    padding: 20px;
    overflow: hidden;
}
.header{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.search{
    display: flex;
    align-items: center;
    background: #f8f8f8;
    width: 200px;
    height: 2.4rem;
    padding: 10px;
    border-radius: 10px;
}
.search input{
    border: none;
    outline: none;
    background: transparent;
    margin-left: 7px;
}
.search o{
    font-size: 20px;
}
.header-content{
    display: flex;
    align-items: center;
    margin-right: 26px;
}
.header-content i{
    color: black;
    font-size: 20px;
    margin-left: 1rem;
}
.header-content .btn{
    display: flex;
    align-items: center;
    padding: 10px;
    border-radius: 8px;
    background: #53b12e;
    margin-left: 1rem;
}
.header-content .btn i{
    color: hsla(0, 0%, 100%, 0.6);
    margin-right: 10px;
}


#go-back1, #go-back2{
    background-color: white;
    border: 1px solid #53b12ea6;;
}
#go-back1 div, #go-back2 div{
    color: black  
} 
#go-back1:hover, #go-back2:hover{
    background-color: #53b12ea6;;
    color: white;
}
#go-back1 div:hover, #go-back2 div:hover{
    color: white;
    font-weight:bold;
}

#modal-parse-div {
	position: fixed; /* 위치 고정 */
	left: 0px;
	top: 0px;
	width: 100vw; /* 사이즈 고정 */
	height: 100vh;
	z-index: 1000; /* 클 수록 앞으로 나옴 */
	display: none; /* 처음엔 안 보여야 함 */
}

#modal-setting-div {
	padding: 5px;
	width: 20%; /* 부모 기준 */
	height: 45%;
	margin: 200px auto; /* 수평 중앙 정렬 */
	background-color: rgb(253, 253, 253);
	border: 1px solid rgba(218, 218, 218, 0.76);
	border-radius: 20px;
	position: relative;
	justify-content: center;
	text-align: center;
}

#modal-setting-close{
	float: right;
	border: none;
	background-color:rgb(253, 253, 253);
	margin-right: 10px;
	font-size: 25px;
	font-weight: bold;
	cursor: pointer;
}

#setting-img-parse{
	display: flex;
    flex-direction: column;
    margin: 20px 30px 8px 30px;
 }
   
#setting-img-div {
	display: flex;
    align-items: center;
    justify-content: center;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    border: 2px solid #4dac27;
    margin: 0px auto;
}
  
  #setting-img-div img{
      width: 180px;
      height: 180px;
      object-fit: cover;
      border-radius: 50%;
      object-position: center;
  }
 
  #modal-setting-all-div{
  	justify-content: center;
  	display: grid;
  }
  
.modal-setting-all{
	font-family: 'Nanum Gothic', sans-serif;
	display: flex;
 		margin-top: 8px;
 		font-weight: bold;
}

.modal-setting-padding{
	margin-right: 15px;
}

#modal-setting-profile-btn
, #modal-setting-complete-btn
, #modal-setting-cancle-btn
, #modal-setting-nick-text
, #modal-setting-profile-file{
	display: none;
}

#modal-setting-nick-text{
	text-align: center;
	width: 130px;
	font-family: 'Nanum Gothic', sans-serif;
	font-weight: bold;
	color: rgb(146, 145, 145)
}

#modal-setting-btns-div{
	display: flex;
  	justify-content: center;
  	margin-top: 13px;
}

.modal-setting-btns{
  	    font-family: 'Nanum Gothic', sans-serif;
	color: white;
	background: #53b12e;
  	    font-weight: bold;
  	    font-size: 0.9em;
  	    padding: 5px 10px;
  	    border: none;
  	    border-radius: 0.2rem;
  	    margin-right: 5px;
  	    cursor: pointer;
}